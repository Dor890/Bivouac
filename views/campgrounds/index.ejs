<%- include ("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome To BIVOUAC</h1>
			<p>View our special campgrounds from all over the world</p>
			<p>	
				<a class="btn btn-primary" href="/campgrounds/new">Add New Campground</a>
			</p>
	</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(campground) { %>
			<div class="col-xl-4 col-lg-6 col-md-6 col-12">
				<div class="img-thumbnail" id="imgThumb2">
					<img class="rounded" id="indexImg" src="<%= campground.image %>">
					<!-- It's importent add the ejs tags inside of the quotes! -->
					<div class="caption-full">
						<h4><%= campground.name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<%- include ("../partials/footer") %>
